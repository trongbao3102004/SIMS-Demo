
@model Course
<h1 style="color:black">New Course</h1>
@using (Html.BeginForm("CreateCourse", "Course", FormMethod.Post))
{
        <div class="form-group">
        @Html.LabelFor(m => m.Id, new {Class="control-Label"})
        @Html.TextBoxFor(m => m.Id, new {Class="form-control"})
        </div>
        <div class="form-group">
        @Html.LabelFor(m => m.Name, new {Class="control-Label"})
        @Html.TextBoxFor(m => m.Name, new {Class="form-control"})
        </div>
        <div>
        @Html.LabelFor(m => m.Lecturer,  new {Class="control-Label"})
        @Html.DropDownListFor(m=>m.Lecturer, new SelectList(ViewBag.SelectTeacher, "Id", "Name"))
        </div>
        <input type="submit" value="Create" class="btn btn-primary" />
}
