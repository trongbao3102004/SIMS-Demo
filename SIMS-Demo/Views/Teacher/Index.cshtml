@model IEnumerable<Teacher>

<h1> @ViewBag.UserName @ViewBag.Role</h1>
<table class="table">
    <thead>
        <tr>
            <td>Name</td>
            <td>Date of Birth</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DoB</td>
                    <td>
                        <a class="btn btn-sm btn-primary"
                           href="@Url.Action("Delete","Teacher",new {id=item.Id})">Delete</a>
                        <a class="btn btn-sm btn-primary"
                           href="@Url.Action("Edit","Teacher",new {id=item.Id})">Edit</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
<ul>
    <li>
        <a asp-controller="Teacher" asp-action="NewTeacher">New Teacher</a>
    </li>
</ul>